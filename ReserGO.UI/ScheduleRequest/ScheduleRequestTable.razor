@using MudBlazor
@using ReserGO.Service.Interface.Service;
@inject ITranslateService t
@inject HttpClient httpClient

<MudTable Items="@Elements" Hover="true" Style="width:100%" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Primary">
    <HeaderContent>
        <MudTh>@(t.Words["Nome"])</MudTh>
        <MudTh>@(t.Words["Cognome"])</MudTh>
        <MudTh>@(t.Words["Telefono"])</MudTh>
        <MudTh>@(t.Words["Email"])</MudTh>
        <MudTh>@(t.Words["Data"])</MudTh>
        <MudTh>@(t.Words["Ora inizio"])</MudTh>
        <MudTh>@(t.Words["Ora fine"])</MudTh>
        <MudTh>@(t.Words["Azioni"])</MudTh>
    </HeaderContent>
    <RowTemplate Context="element">
        <MudTd>@element.Nome</MudTd>
        <MudTd>@element.Cognome</MudTd>
        <MudTd>@element.Telefono</MudTd>
        <MudTd>@element.Email</MudTd>
        <MudTd>@element.Data</MudTd>
        <MudTd>@element.OraInizio</MudTd>
        <MudTd>@element.OraFine</MudTd>
        <MudTd><MudButton Color="Color.Primary">@(t.Words["Modifica"])</MudButton></MudTd>
    </RowTemplate>
</MudTable>

@code {
    // Modello dati per la tabella
    public class Persona
    {
        public string Nome { get; set; }
        public string Cognome { get; set; }
        public string Telefono { get; set; }
        public string Email { get; set; }
        public string Data { get; set; }
        public string OraInizio { get; set; }
        public string OraFine { get; set; }
    }

    // Lista di dati fittizi
    private IEnumerable<Persona> Elements;

    // Inizializzazione con dati provvisori
    protected override void OnInitialized()
    {
        Elements = new List<Persona>
        {
            new Persona { Nome = "Alessia", Cognome = "Calogero", Telefono = "345xxxxxxx", Email = "Alessia@gmail.com", Data = "11/22/2024", OraInizio = "09:00", OraFine = "10:00" },
            new Persona { Nome = "Luca", Cognome = "Rossi", Telefono = "334xxxxxxx", Email = "luca.rossi@gmail.com", Data = "11/22/2024", OraInizio = "10:00", OraFine = "11:00" },
            new Persona { Nome = "Marta", Cognome = "Verdi", Telefono = "339xxxxxxx", Email = "marta.verdi@gmail.com", Data = "11/23/2024", OraInizio = "14:00", OraFine = "15:00" }
