@using ReserGO.ViewModel.Interface.LoginHome;
@using ReserGO.ViewModel.Interface.Home;
@using ReserGO.ViewModel.Interface.Authentication;
@using ReserGO.Utils.UI
@using ReserGO.Utils.DTO.Utils
@inherits BaseComponentChild<IHomeViewModel, object>


@if (CurrentViewModel.User.Roles is null || CurrentViewModel.UserIs(RoleConst.GUEST))
{
    <GuestHome ChoiceSelectedComponent="@((string component) => CurrentViewModel.ChangeComponent(component))"/>
}

@if ((CurrentViewModel.User.Roles!=null && CurrentViewModel.UserIs(RoleConst.CUSTOMER)) || true)
{
    <BaseComponent TViewModel="ILoginHomeViewModel" TModel="object">
        <Content>
            <LoginHome ChoiceSelectedComponent="@((string component) => CurrentViewModel.ChangeComponent(component))" />
        </Content>
    </BaseComponent>
}

@if ((CurrentViewModel.User.Roles != null && CurrentViewModel.UserIs(RoleConst.ADMIN)) || false)
{
     <AdminHome ChoiceSelectedComponent="@((string component) => CurrentViewModel.ChangeComponent(component))"/>    
}

