@using MudBlazor;
@using ReserGO.UI.Utils
@using ReserGO.Utils.UI



<div class="d-flex flex-column homeGuestContainer">

        <div class="d-flex flex-row homeGuestBody">

            <div class="d-felx flex-column leftSide">

                <div class="d-flex justify-content-center informationHomeContiner">
                    <CardInformation />
                </div>

                <div class="d-flex justify-content-center detailsHomeContiner">
                    <div class="d-flex flex-row">
                        <div class="d-flex p-2 w-100">
                            <CardDetails Title="Orari studio:" Description="@HourDesc" />
                        </div>
                    <div class="d-flex p-2 w-100">
                            <CardDetails Title="Telefono e Indirizzo:" Description="@AddresDesc" />
                        </div>
                    </div>
                </div>

            </div>

            <div class="d-flex flex-column rightSide justify-content-center align-items-center">
                <div class="d-flex p-4">
                    <CardReserGo Title="Prenotazione" Description="Richiedi un appuntamento per una nuova visita medica" Icon="@ReservationIcon"/>
                </div>
                <div class="d-flex p-4">
                    <CardReserGo Title="Informazioni" Description="Tutte le informazioni sullo studio medico" Icon="@InformationIcon" />
                </div>
            </div>
        </div>

</div>







