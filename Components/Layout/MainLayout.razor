@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@using ReserGO.DTO
@using ReserGO.Service.Extensions
@using ReserGO.Service.Service.Utils
@using ReserGO.Utils.Event
@using ReserGO.Utils.UI
@using ReserGO.UI.Utils
@using ReserGO.ViewModel.Interface.Authentication
@using ReserGO.ViewModel.Interface.Utils
@using ReserGO.UI.Authentication;
@using Microsoft.AspNetCore.Components;
@using ReserGO.Miscellaneous.Model
@using ReserGO.Miscellaneous.Message
@using ReserGO.ViewModel.ViewModel.Utils
@using ReserGO.WebApp.Components.Pages
@inherits LayoutComponentBase

<div class="pageContainer">
    <BaseComponent TViewModel="ILoadingSpinnerViewModel" TModel="object">
        <Content>
            <LoadingSpinner />
        </Content>
    </BaseComponent>
    <MudPopoverProvider />
    <MudDialogProvider />
    <MudSnackbarProvider />
    <MudThemeProvider Theme="@_theme" />

    @{
        var Manutenzione = MyConfigurationAccessor.GetValue("ConfigServer:Manutenzione");
        bool inManutenzione = bool.Parse(Manutenzione);
    }
    @if (!inManutenzione)
    {
        @if (!IsRedirect)
        {
            <AuthorizeView>
                <Authorized>
                    @if (Render)
                    {
                        @Body
                    }
                </Authorized>
                <NotAuthorized>
                </NotAuthorized>
            </AuthorizeView>
        }
        else
        {
            @Body
        }
    }
    else
    {
        <Manutenzione />
    }

</div>

@code {


    private MudTheme _theme = new MudTheme
        {
            PaletteLight = new PaletteLight
            {
                Primary = "#0066FF"
            }
        };
}

<style>

    .containerWrapper {
        width: 100%;
        height: 100%;
        backdrop-filter: blur(40px);
    }

    .wrapper {
        margin: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .bgtext {
        font-size: 20px;
        letter-spacing: 3px;
        font-weight: 600;
        font-family: Arial,Helvetica, sans-serif;
        color: #0066FF;
        width: 100%;
        text-transform: uppercase;
        border-right: 5px solid;
        white-space: nowrap;
        overflow: hidden;
        animation: typing 1.7s steps(19), cursor .4s step-end infinite alternate;
    }

    @@keyframes cursor {
        50% {
            border-color: transparent;
        }
    }

    @@keyframes typing {
        from {
            width: 0;
        }
    }

    .mud-form {
        flex-direction: unset !important;
        display: unset !important
    }

    .mud-dialog .mud-dialog-content {
        padding: 0 !important;
        margin: 0 !important;
    }

</style>

